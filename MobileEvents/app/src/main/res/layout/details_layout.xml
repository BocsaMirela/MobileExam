<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.example.examenEvents.DetailsActivity">

    <TextView
            android:text="ID:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="30dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:id="@+id/textView1"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            />

    <TextView
            android:text="TEXT:"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="30dp"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/textView1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@id/textView1"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            />


    <TextView
            android:text="DATA  :"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@id/textView2"
            />

    <TextView
            tools:text="TextView"
            android:id="@+id/textViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/textView3"
            app:layout_constraintStart_toEndOf="@id/textView3"
            app:layout_constraintBaseline_toBaselineOf="@id/textView1"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="30dp"/>

    <EditText
            tools:text="TextView"
            android:id="@+id/textViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:textSize="18sp"
            android:maxLines="5"
            android:lines="1"
            app:layout_constraintTop_toBottomOf="@id/textViewId"
            app:layout_constraintLeft_toRightOf="@id/textView3"
            app:layout_constraintStart_toEndOf="@id/textView3"
            app:layout_constraintBaseline_toBaselineOf="@id/textView2"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"/>

    <TextView
            tools:text="TextView"
            android:id="@+id/textViewTextData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:textSize="18sp"
            android:lines="1"
            android:hint="@string/chooseDate"
            android:onClick="showDatePickerDialog"
            app:layout_constraintTop_toBottomOf="@id/textViewText"
            app:layout_constraintLeft_toRightOf="@id/textView3"
            app:layout_constraintStart_toEndOf="@id/textView3"
            app:layout_constraintBaseline_toBaselineOf="@id/textView3"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"/>

    <!--<DatePicker-->
            <!--android:id="@+id/datePicker"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginEnd="8dp"-->
            <!--android:layout_marginStart="8dp"-->
            <!--android:layout_marginTop="8dp"-->
            <!--app:layout_constraintTop_toBottomOf="@id/textViewText"-->
            <!--app:layout_constraintLeft_toLeftOf="parent"-->
            <!--android:visibility="gone"-->
            <!--app:layout_constraintRight_toRightOf="parent"-->
/>
    <Button
            android:onClick="onUpdate"
            android:text="@string/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="341dp"
            tools:layout_editor_absoluteX="224dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@id/textViewTextData"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/button"/>


</android.support.constraint.ConstraintLayout>